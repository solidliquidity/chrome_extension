{
    "manifest_version": 3,
    "name": "HTML Grabber",
    "version": "1.0",
    "description": "Gets the HTML of the current tab",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/apple-touch-icon.png",
        "48": "images/Artboard.png",
        "128": "images/fab.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}